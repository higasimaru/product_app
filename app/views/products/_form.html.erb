<%= form_with model: @product, local: true do |f| %>
  <%= f.fields_for :images do |image| %>
    <%#= image_tag image.object.url %>
    <div class="product-form">
      <div class="form-label">
        <%= image.label :url, "出品画像"%>
        <span>必須</span>
      </div>
      <p>最大10枚までアップロードできます</p>
      <label id="file-label" for="file">
        <p>
          <i class="fa fa-camera"></i><br>
          ドラッグアンドドロップ<br>
          またはクリックでファイルをアップロード
        </p>
        <div class="file-form">
          <%= image.file_field :url, id: "file" %>
        </div>
      </label>
    </div>
  <% end %>
  <div class="product-form">
    <div class="form-label">
      <%= f.label :name, "商品名" %>
      <span>必須</span>
    </div>
    <div class="name-form">   
      <%= f.text_field :name, placeholder: "40文字まで", maxlength: "40" %>
    </div>
  </div>
  <div class="product-form">
    <p class="price-caution">価格　(¥300〜9,999,999)</p>
    <div class="form-label price-label">
      <%= f.label :price, "販売価格" %>
      <span>必須</span>
      <i class="fas fa-yen-sign"></i>
      <%= f.number_field :price, class: "price-form", placeholder: "0" %>    
    </div>
    <div class="price-fee">
      <p>販売手数料　(10%)</p>
      <span>ー</span>
    </div>
  </div>
  <div class="product-form">
    <div class="price-profit">
      <p>販売利益</p>
      <span>ー</span>
    </div>
    <%= f.submit "出品する", class: "btn" %>
  </div>
<% end %>
  
<!DOCTYPE html>
<html>
  <%= render "layouts/head" %>
  <body>
    <div class="container">
      <% flash.each do |key, value| %>
        <div class="flash-box">
          <i class="fas fa-check-circle"></i>
          <%= content_tag :span, value, class: "alert alert-#{key}"%>
          <i class="fa fa-times"></i>
        </div>
      <% end %>
    </div>
    <%= yield %>
    <%= render "layouts/footer" %>
  </body>
</html>
